<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pages.Bankingpages">

    <VerticalStackLayout Padding="30" Spacing="30">
            <Label
            Text="Sisesta tulud ja kulud"
            FontSize="24"
            HorizontalOptions="Center"
            TextColor="White" />

            <!-- Sisestamiseks tulude ja kulude vÃ¤ljad -->
            <Entry x:Name="IncomeEntry" 
               Placeholder="Sisesta tulud" 
               Keyboard="Numeric" 
               TextColor="White" 
               BackgroundColor="Blue" />

            <Entry x:Name="ExpenseEntry" 
               Placeholder="Sisesta kulud" 
               Keyboard="Numeric" 
               TextColor="White" 
               BackgroundColor="Blue" />

            <!-- Arvutamise nupp -->
            <Button
            Text="Arvuta saldo"
            BackgroundColor="Blue"
            TextColor="White"
            Clicked="OnCalculateBalanceClicked" />

            <!-- Kuvatakse saldo -->
            <Label
            x:Name="BalanceLabel"
            Text="Saldo: 0"
            FontSize="24"
            HorizontalOptions="Center"
            TextColor="White" />
        </VerticalStackLayout>

</ContentPage>